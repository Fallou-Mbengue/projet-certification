{% extends 'base.html.twig' %}

{% block title %}Apointment{% endblock %}

{% block body %}

	<section id="hero">
		<div id="heroCarousel" data-bs-interval="5000" class="carousel slide carousel-fade" data-bs-ride="carousel">

			<ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

			<div
				class="carousel-inner" role="listbox">

				<!-- Slide 1 -->
				<div class="carousel-item active" style="background-image: url(assets/img/slide/slide-1.jpg)">
					<div class="container">
						<h1>CIDIS</h1>
						<h3 style="color: black;">Centree D'imagerie Diagnostique et Interventionnelle De Soumbedioune</h3>
						<a href="#appointment" class="btn-get-started scrollto">Prendre Rendez-vous</a>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- ======= Rendez-vous Section ======= -->
	<section id="appointment" class="appointment section-bg">
		<div class="container" data-aos="fade-up">

			<div class="section-title">
				<h2>PRENDRE RENDEZ-VOUS</h2>
				<p>Vous pouvez dès maintenant prendre rendez-vous directement en ligne, avec un professionnel de santé 24h/24 et 7j/7, en seulement quelques clics !</p>
			</div>

			<form  method="POST" role="form" class="php-email-form" data-aos="fade-up" data-aos-delay="100">
				<div class="row">
					<div class="col-md-4 form-group">
						<input type="text" name="name" class="form-control" id="name" placeholder="Nom" required>
					</div>
					<div class="col-md-4 form-group mt-3 mt-md-0">
						<input type="text" class="form-control" name="prenom" id="prenom" placeholder="Prénom" required>
					</div>
					<div class="col-md-4 form-group mt-3 mt-md-0">
						<input type="datetime" class="form-control" name="dat" id="dat" placeholder="Date de naissance" required>
					</div>
				</div>

                <div class="row">
					<div class="col-md-4 form-group">
						<input type="email" name="email" class="form-control" id="email" placeholder="Email" required>
					</div>
					<div class="col-md-4 form-group mt-3 mt-md-0">
						<input type="tel" class="form-control" name="phone" id="phone" placeholder=" Numéro de Téléphone" required>
					</div>
					<div class="col-md-4 form-group mt-3 mt-md-0">
						<input type="text" class="form-control" name="adresse" id="adresse" placeholder=" Adresse" required>
					</div>
				</div>
				<div class="row">
					<div class="col-md-4 form-group mt-3">
						<input type="date" name="dateR" id="dateR" class="form-control" placeholder="Date rendez-vous" required>
					</div>
					<div class="col-md-4 form-group mt-3">
						<select name="department" id="department" class="form-select">
							<option value="">Type Examen</option>
							<option value="Department 1">Radio</option>
							<option value="Department 2">IRM</option>
							<option value="Department 3">Scaner</option>
						</select>
					</div>
					<div class="col-md-4 form-group mt-3">
						<select name="doctor" id="doctor" class="form-select">
							<option value="">Examen</option>
							<option value="Doctor 1">Pr Ababacar Mbengue</option>
							<option value="Doctor 2">Pr Ndoye Diop</option>
							<option value="Doctor 3">Pr Dioni Diop</option>
							<option value="Doctor 4">Dr Diakhaté</option>
							<option value="Doctor 5">Dr Ndiaye</option>
						</select>
					</div>
				</div>

				<div class="form-group mt-3">
					<textarea class="form-control" name="message" rows="5" placeholder="Message (Optional)"></textarea>
				</div>
				<div class="my-3">
					<div class="loading">Loading</div>
					<div class="error-message"></div>
					<div class="sent-message">Your appointment request has been sent successfully. Thank you!</div>
				</div>
				<div class="text-center">
					<button type="submit">PRENDRE RENDEZ-VOUS</button>
				</div>
			</form>

		</div>
	</section>
	<!-- Fin Rendez-vous Section -->
{% endblock %}
